@page
@model ComunicacaoModel
@{
    ViewData["Title"] = "Comunicação de Saque";
}

<label>@Model.Message</label>
<div class="row">
    <div class="col-sm-12" style="">
        <ol class="breadcrumb" style="border-bottom: 1px solid #a10017; background-color:white;">
            <li class="active page-title">@ViewData["Title"] <span class="pull-right btn-print-dark"><i class="glyphicon glyphicon-print"></i>&nbsp;</span></li>
        </ol>
    </div>
</div>
<div class="row" style="margin-top:15px;">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-md-12" style="padding-bottom: 15px;">
                <button class="btn btn-sm btn-danger pull-right" ng-click="abrirIncluir();">Incluir&nbsp;<i class="glyphicon glyphicon-plus"></i></button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="clearfix"></div>
                <table class="table table-condensed table-striped table-bordered">
                    <thead>
                        <tr>
                            <th style="text-align: center;">Data</th>
                            <th style="text-align: right;">Valor</th>
                            <th style="text-align: left;">Finalidade</th>
                            <th style="text-align: left;">Nome Sacador</th>
                            <th style="text-align: left;">Estrangeiro</th>
                            <th style="text-align: left;">Documento Sacador</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ComunicacaoList)
                        {
                            <tr>
                                <td style="text-align: center;">@item.CommunicationDate.ToString("dd/MM/yyyy")</td>
                                <td style="text-align: right;">@item.Amount.ToString("R$ 0,0.00")</td>
                                <td style="text-align: left;">@item.Finality</td>
                                <td style="text-align: left;">@(item.Payee != null ? item.Payee.Name : "")</td>
                                <td style="text-align: left;">
                                    @(item.Payee != null
? item.Payee.Foreign ? "SIM" : "NÃO"
: "NÃO")
                                </td>
                                <td style="text-align: left;">@(item.Payee != null ? item.Payee.Foreign ? item.Payee.Passport : item.Payee.Cpf.FormatedNumber : "")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <br />
        <br />
        <br />
    </div>
</div>
